<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Type Go</title>
  <link rel="shortcut icon" href="../images/favicon.ico">

  <link rel="stylesheet" type="text/css" href="../css/template.css">
  <link rel="stylesheet" type="text/css" href="../css/multi.css">
  <link rel="stylesheet" media="screen and (max-width: 1000px)" href="css/phone.css">
  <link rel="stylesheet" media="screen and (max-width: 1000px)" href="css/temp.css">

  <script src="https://use.fontawesome.com/8db36dc613.js"></script>
  <script defer src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/3.1.3/socket.io.js"
    integrity="sha512-2RDFHqfLZW8IhPRvQYmK9bTLfj/hddxGXQAred2wNZGkrKQkLGj8RCkXfRJPHlDerdHHIzTFaahq4s/P4V6Qig=="
    crossorigin="anonymous"></script>

  <!-- <script defer src="../js/home.js"></script> -->
  <script defer src="../js/create.js"></script>
</head>

<body>
  <%- include('./template/nav.ejs'); -%>
  <main>
    <div class="container">

      <div class="gameDiv shadow">
        <label for=""><b>Share Room Name with friends:</b></label>
        <h4 style="display: inline-block;" id="roomName"></h4>
        <h2>Players in Game</h2>
        <div class="game" id="inGame">



        </div>
      </div>

      <div class="typeDiv center shadow">
        <div id="hack" style="display: none;">
          <p class="words shadow" id="pera" oncopy="return false"></p>
        </div>

        <h1 class="center" id="timer">TYPE GO <i class="fa fa-keyboard-o" aria-hidden="true"></i></h1>

        <textarea name="" id="myText" cols="30" rows="10" onpaste="return false" placeholder="Click on start button to start typing..."
          disabled></textarea>
        <small style="font-weight: bolder;" id="textInSmallTag" class="green"> </small><small id="timeLeftSpan"
          class="green" style="font-weight: bolder;"></small>

        <div class="btnDiv">
          <button id="startBtn">Start <i class="fa fa-gamepad" aria-hidden="true"></i></button>
          <button id="homeBtn" onclick="window.location.href='https://type-go-multiplayer.herokuapp.com/'">Home <i class="fa fa-home" aria-hidden="true"></i></button>
        </div>
      </div>
    </div>

    <div class="rankDiv" id = "ranks">
        <h2 style="margin-top: 30px;">Result</h2>
        <table id="players">
          <tr>
            <th>Players</th>
            <th>Speed</th>
          </tr>
        </table>
    </div>
</main>
    <%- include('./template/footer.ejs'); -%>
</body>

</html>